@using AppetizerHtmlHelper;

@{
    ViewBag.Title = "Profile Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* JSGRID Includes *@
<link href="~/Content/font-awesome.css" rel="stylesheet" />
